<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="HoRS-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/hors</jta-data-source>
    <class>entity.EmployeeEntity</class>
    <class>entity.GuestEntity</class>
    <class>entity.GuestReservationEntity</class>
    <class>entity.NormalRateEntity</class>
    <class>entity.PartnerEntity</class>
    <class>entity.PartnerReservationEntity</class>
    <class>entity.PeakRateEntity</class>
    <class>entity.PromoRateEntity</class>
    <class>entity.PublishedRateEntity</class>
    <class>entity.ReservationEntity</class>
    <class>entity.RoomEntity</class>
    <class>entity.RoomRateAbsEntity</class>
    <class>entity.RoomTypeEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
